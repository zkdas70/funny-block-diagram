n = int(input('n'))

# x = list(range(1, n + 1))
# y = list(range(1, n + 1))

x = list(map(int, input('x').split()))
y = list(map(int, input('y').split()))

divider = 0
dividend = 0

for i in range(n):
    divider += x[i] * y[n - 1 - i] ** 2
    dividend += y[i] * x[n - 1 - i] ** 2

    for i in range(n):
        divider += x[i] * y[n - 1 - i] ** 2
        dividend += y[i] * x[n - 1 - i] ** 2

print(divider / dividend)